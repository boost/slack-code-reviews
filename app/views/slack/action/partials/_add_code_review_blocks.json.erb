[
  <%= render partial: 'slack/action/partials/developer_section.json',
             locals: {
               developer: @action.cr.requester,
               text: " is requesting your review on #{@action.cr.url}"
             }
  %>,

  <%= render partial: 'slack/action/partials/divider.json' %>

  <% @action.cr.developers.each do |reviewer| %>
    ,<%= render partial: 'slack/action/partials/developer_section.json',
               locals: {
                 developer: reviewer,
                 text: ': picked from queue'
               }
    %>
  <% end %>
]
